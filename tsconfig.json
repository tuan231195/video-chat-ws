{
	"extends": "./node_modules/@vdtn359/base-typescript/tsconfig.json",
	"exclude": ["**/node_modules", "**/dist"],
	"compilerOptions": {
		"module": "esnext",
		"target": "es2017",
		"lib": ["DOM", "ESNext"],
		"moduleResolution": "node",
		"noEmit": true,
		"jsx": "preserve"
	},
	"include": [
		".eslintrc.cjs",
		".release-it.cjs",
		".cz-config.cjs",
		".monorepolint.config.ts",
		".monorepolint/templates/.eslintrc.cjs",
		".monorepolint/templates/.release-it.cjs",
		".monorepolint/**/*.ts",
		".monorepolint/**/*.js",
		"infra/**/*.ts",
		"scripts/**/*.ts",
		"scripts/**/*.js"
	]
}
